import random
import json
import os
from datetime import datetime

class NumberGuessingGame:
    def __init__(self):
        self.high_scores_file = "high_scores.json"
        self.high_scores = self.load_high_scores()
        self.current_score = 0
        self.games_played = 0
        self.games_won = 0 

    def load_high_scores(self):
        """Load high scores from JSON file"""
        if os.path.exists(self.high_scores_file):
            try:
                with open(self.high_scores_file, 'r') as file:
                    return json.load(file)
            except (json.JSONDecodeError, Exception):
                return {}
        return {}

      
    def save_high_scores(self):
        """Save high scores to JSON file"""
        try:
            with open(self.high_scores_file, 'w') as file:
                json.dump(self.high_scores, file, indent=2)
        except Exception as e:
            print(f"âŒ Error saving high scores: {e}")

    def display_welcome(self):
        """Display welcome message and rules"""
        print("ğŸ¯" * 20)
        print("      NUMBER GUESSING GAME")
        print("ğŸ¯" * 20)
        print("\nğŸ“– HOW TO PLAY:")
        print("â€¢ I'll think of a number between 1-100")
        print("â€¢ You try to guess it in as few attempts as possible")
        print("â€¢ I'll give you hints along the way")
        print("â€¢ Lower attempts = Higher score!")
        print("ğŸ¯" * 20)

    def choose_difficulty(self):
        """Let player choose difficulty level"""
        print("\nğŸ® DIFFICULTY LEVELS:")
        print("1. ğŸŸ¢ Easy (1-50, unlimited attempts)")
        print("2. ğŸŸ¡ Medium (1-100, 10 attempts)")
        print("3. ğŸ”´ Hard (1-200, 7 attempts)")
        print("4. ğŸ’€ Expert (1-500, 5 attempts)")
        
        while True:
            try:
                choice = int(input("\nChoose difficulty (1-4): "))
                if 1 <= choice <= 4:
                    return choice
                else:
                    print("âŒ Please enter 1, 2, 3, or 4")
            except ValueError:
                print("âŒ Please enter a valid number!")
